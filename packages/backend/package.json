{
  "name": "@loyalty/backend",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed-erc1155-spaceship": "ts-node -r tsconfig-paths/register src/scripts/seedERC1155Spaceship.ts",
    "seed-erc1155-sculpture": "ts-node -r tsconfig-paths/register src/scripts/seedERC1155Sculpture.ts",
    "seed-lootbox": "ts-node -r tsconfig-paths/register src/scripts/seedLootbox.ts",
    "dev:tracker:lootbox": "ts-node -r tsconfig-paths/register src/scripts/lootbox-tracker.ts",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed"
  },
  "dependencies": {
    "@acuris/aws-es-connection": "^2.3.0",
    "@elastic/elasticsearch": "7.13.0",
    "@metamask/eth-sig-util": "^4.0.0",
    "@nestjs/axios": "^0.0.7",
    "@nestjs/common": "^8.1.1",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.1.1",
    "@nestjs/elasticsearch": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.1.1",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "aws-sdk": "^2.1086.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.1",
    "dotenv": "^16.0.0",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.5.4",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "ioredis": "^4.28.5",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "swagger-typescript-api": "^9.3.1",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.44",
    "typeorm-seeding": "^1.6.1",
    "web3": "^1.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.3",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.3.0",
    "nestjs-seeder": "^0.2.0",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "moduleNameMapper": {
      "@env": "<rootDir>/src/env",
      "^@core/(.*)$": [
        "<rootDir>/src/core/$1"
      ],
      "^@models/(.*)$": [
        "<rootDir>/src/models/$1"
      ],
      "^@modules/(.*)$": [
        "<rootDir>/src/modules/$1"
      ],
      "^@utils/(.*)$": [
        "<rootDir>/src/utils/$1"
      ],
      "@entity": [
        "<rootDir>/src/entity/index.entity"
      ],
      "@middleware": [
        "<rootDir>/src/middleware/index.middleware"
      ],
      "^@setting/(.*)$": [
        "<rootDir>/src/setting/$1"
      ]
    },
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
